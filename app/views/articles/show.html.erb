<% provide(:title, @article.name) %>

<p>
  <%= link_to "Back", articles_path %>
</p>

<% if user_signed_in? %>
  <o>
    <%= link_to "Delete", article_path(@article), :method => :delete, :data => { :confirm => "Are you sure?" } %>
  </p>
<% end %>

<p class="article_title">
  <%= @article.name %>
</p>

<p>
  <%= @article.body %>
</p>

