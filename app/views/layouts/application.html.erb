<!DOCTYPE html>
<html>
  <head>
    <title><%= "Captain Coder | #{yield(:title)}" %></title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <ul class="header">
      <li>
        <h1>
          <%= link_to "Captain Coder", root_path %>
        </h1>
      </li>

      <li>
        <%= link_to "Entries", entries_path %>
      </li>

      <% if user_signed_in? %>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        </li>
      <% end %>
    </ul>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <% if flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>

    <%= yield %>
  </body>
</html>
