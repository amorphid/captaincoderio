<% provide(:title, "Blog") %>

<% if user_signed_in? %>
  <ul>
    <li class="navbar-item">
      <%= link_to "New", new_entry_path %>
    </li>
  </ul>
<% end %>

<ul class="entries-list">
  <% @entries.each do |entry| %>
    <li id="entry_<%= entry.id %>">
      <%= link_to(entry) do %>
        <p class="entry-title">
          <%= entry.title %>
        </p>

        <p class="entry-item">
          <%= entry.body[0..199] + "..." %>
        </p>
      <% end %>
    </li>
  <% end %>
</ul>
