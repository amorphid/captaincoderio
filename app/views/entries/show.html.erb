<% provide(:title, @entry.title) %>

<ul>
  <li class="navbar-item">
    <%= link_to "Back", entries_path %>
  </li>

  <% if user_signed_in? %>
    <li class="navbar-item">
      | <%= link_to "Edit", edit_entry_path(@entry) %>
    </li>

    <li class="navbar-item">
      | <%= link_to "Delete", entry_path(@entry), :method => :delete, :data => { :confirm => "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<p class="entry-title">
  <%= @entry.title %>
</p>

<p class="entry-item">
  <%= simple_format(@entry.body) %>
</p>

